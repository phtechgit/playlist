<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme1. -->
    <style name="DarkThemeNoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/BlackF</item>

        <item name="android:textSize">@dimen/textSizeBody1</item>
        <!--<item name="android:windowBackground">@drawable/splash_background</item>-->
        <item name="materialButtonStyle">@style/ButtonStyleDark</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="toolbarStyle">@style/ToolbarCustomStyle</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:font" tools:targetApi="o">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="snackbarStyle">@style/SnackBarCustomStyle</item>
    </style>

    <!-- Base application theme2. -->
    <style name="DarkTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/BlackF</item>

        <item name="android:textSize">@dimen/textSizeBody1</item>
        <!--<item name="android:windowBackground">@drawable/splash_background</item>-->
        <item name="materialButtonStyle">@style/ButtonStyleDark</item>
        <item name="toolbarStyle">@style/ToolbarCustomStyle</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:font" tools:targetApi="o">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="snackbarStyle">@style/SnackBarCustomStyle</item>
    </style>

    <!--button styles-->
    <style name="ButtonStyleDark" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textSize">@dimen/textSizeBody2</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="ButtonStyleGray" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/grayF</item>
        <item name="android:textSize">@dimen/textSizeBody2</item>
        <item name="android:textColor">@color/grayA</item>
    </style>
    <style name="ButtonStyleLight" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/textSizeBody2</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!--EditText styles-->
    <style name="EditText1Style" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_background_white</item>
    </style>

    <!--Toolbar & ActionBar styles-->
    <style name="ToolbarCustomStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="titleTextAppearance">@style/TitleTextStyle</item>
    </style>
    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="titleTextStyle">@style/TitleTextStyle</item>
    </style>
    <style name="TitleTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">30sp</item>
    </style>

    <!--TextInputLayout styles-->
    <style name="TextInputLayoutStyleDark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
    </style>

    <!--SnackBar styles-->
    <style name="SnackBarCustomStyle" parent="Widget.MaterialComponents.Snackbar.FullWidth">
    </style>

    <!--SeekBar Styles-->
    <style name="SeekBarCustomStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:thickness">1dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>



</resources>
