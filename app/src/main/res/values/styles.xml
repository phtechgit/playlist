<resources>

    <!-- Base application theme. -->
    <style name="DarkThemeNoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/textSizeBody1</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="materialButtonStyle">@style/ButtonStyleDark</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="toolbarStyle">@style/ToolbarStyle2Dark</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/textSizeBody1</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="materialButtonStyle">@style/ButtonStyleDark</item>
        <item name="toolbarStyle">@style/ToolbarStyle2Dark</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <!--button styles-->
    <style name="ButtonStyleDark" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textSize">@dimen/textSizeBody2</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="ButtonStyleGray" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/grayF</item>
        <item name="android:textSize">@dimen/textSizeBody2</item>
        <item name="android:textColor">@color/grayA</item>
    </style>
    <style name="ButtonStyleLight" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/textSizeBody2</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="EditTextDialogStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_background_white</item>
    </style>

    <style name="ToolbarStyle1Dark" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="titleTextAppearance">@style/ToolbarTitleText</item>
    </style>

    <style name="ToolbarStyle2Dark" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="titleTextAppearance">@style/ToolbarTitleText</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="titleTextStyle">@style/ToolbarTitleText</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextInputLayoutStyleDark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
    </style>

</resources>
