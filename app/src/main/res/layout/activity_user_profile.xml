<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".auth.user_detail.UserProfileActivity">

            <ImageView
                android:src="@drawable/ic_profile_user"
                android:layout_marginTop="32dp"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="120dp"/>

            <EditText
                android:id="@+id/ediText_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:lines="1"
                android:padding="8dp"
                android:hint="First name"
                android:maxLength="15"
                android:inputType="textPersonName"
                android:textSize="@dimen/textSizeBody1"
                android:imeOptions="actionNext"
                android:textColor="@color/grayC"
                android:background="@drawable/edittext_background_gray" />

            <EditText
                android:id="@+id/ediText_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:lines="1"
                android:padding="8dp"
                android:hint="Last name"
                android:maxLength="15"
                android:inputType="textPersonName"
                android:textSize="@dimen/textSizeBody1"
                android:imeOptions="actionDone"
                android:textColor="@color/grayC"
                android:background="@drawable/edittext_background_gray"/>

            <com.google.android.material.textfield.TextInputLayout
                android:visibility="gone"
                android:theme="@style/TextInputLayoutStyleDark"
                android:layout_marginTop="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:hint="First Name"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:visibility="gone"
                android:layout_marginTop="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                app:boxBackgroundColor="@color/grayF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:hint="Last Name"
                    android:text="Shekhar"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_arrow_forward"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</layout>